<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.magmarket.ui.homefragment.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment"
            app:enterAnim="@anim/slide_in_up"
            app:popEnterAnim="@anim/slide_in_up"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_showMoreFragment"
            app:destination="@id/showMoreFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:popEnterAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_productsCategoryFragment"
            app:destination="@id/productsCategoryFragment"
            app:enterAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@android:anim/slide_in_left" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.magmarket.ui.categoryfragment.CategoryFragment"
        android:label="CategoryFragment" >
        <action
            android:id="@+id/action_categoryFragment_to_productsCategoryFragment"
            app:destination="@id/productsCategoryFragment"
            app:enterAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_categoryFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.magmarket.ui.productdetailsfragment.ProductDetailFragment"
        android:label="ProductDetailFragment" >
        <argument
            android:name="id"
            app:argType="string" />
        <action
            android:id="@+id/action_productDetailFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/productsCategoryFragment"
        android:name="com.example.magmarket.ui.productscategory.ProductsCategoryFragment"
        android:label="ProductsCategoryFragment" >
        <argument
            android:name="category"
            app:argType="integer" />
        <action
            android:id="@+id/action_productsCategoryFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment"
            app:enterAnim="@anim/slide_in_up"
            app:popEnterAnim="@anim/slide_in_up"
            app:popUpTo="@id/productsCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/userFragment"
        android:name="com.example.magmarket.ui.userfragment.UserFragment"
        android:label="UserFragment" />
    <fragment
        android:id="@+id/showMoreFragment"
        android:name="com.example.magmarket.ui.showmore.ShowMoreFragment"
        android:label="ShowMoreFragment" >
        <argument
            android:name="orderby"
            app:argType="string" />
        <action
            android:id="@+id/action_showMoreFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment"
            app:enterAnim="@anim/slide_in_up"
            app:popEnterAnim="@anim/slide_in_up"
            app:popUpTo="@id/showMoreFragment" />
        <argument
            android:name="ordername"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.magmarket.ui.cartfragment.CartFragment"
        android:label="Cart" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.magmarket.ui.searchfragment.SearchFragment"
        android:label="SearchFragment" />
</navigation>