<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/connection"
    android:background="@color/white"
   android:paddingBottom="@dimen/standardMargin2x"
    android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_noconnection"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/no_internet"
            app:layout_constraintEnd_toEndOf="@id/connection"
            app:layout_constraintStart_toStartOf="@id/connection"
            app:layout_constraintTop_toTopOf="@id/connection" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_notconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standardMargin3x"
            android:gravity="center"
            android:text="@string/connection"
            android:textSize="@dimen/standardMargin7x"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/connection"
            app:layout_constraintStart_toStartOf="@id/connection"
            app:layout_constraintTop_toBottomOf="@id/img_noconnection" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/desConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standardMargin3x"
            android:gravity="center"
            android:lines="4"
            android:textColor="@color/black"
            android:padding="@dimen/standardMargin3x"
            android:text="@string/connection_describtion"
            android:textSize="@dimen/standardMargin5x"
            app:layout_constraintEnd_toEndOf="@id/connection"
            app:layout_constraintStart_toStartOf="@id/connection"

            app:layout_constraintTop_toBottomOf="@id/tv_notconnect" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standardMargin4x"
            android:text="TRY AGIAN"
            android:textColor="@color/black"
            app:cornerRadius="@dimen/standardMargin6x"
            app:layout_constraintEnd_toEndOf="@id/connection"
            app:layout_constraintStart_toStartOf="@id/connection"
            app:layout_constraintTop_toBottomOf="@id/desConnection" />

</androidx.constraintlayout.widget.ConstraintLayout>