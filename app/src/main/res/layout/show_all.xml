<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/standardMargin"
    android:backgroundTint="@color/whiteBackground"
    app:cardElevation="@dimen/standardMargin"
    android:layout_margin="@dimen/standardMargin2x"
    android:layout_height="170dp"
   >

    <LinearLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="66dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="60"
            android:adjustViewBounds="true"
            android:src="@drawable/showmore"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvshowall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center"
            android:text="@string/show_all"
            android:fontFamily="@font/farkhondeh"
            android:layout_marginBottom="@dimen/standardMargin3x"
            android:textColor="@color/text"
            android:textSize="@dimen/TextSize4x"
            tools:ignore="SpUsage" />


    </LinearLayout>

</androidx.cardview.widget.CardView>